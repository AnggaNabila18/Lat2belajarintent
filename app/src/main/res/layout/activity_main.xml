<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicit Intent | Explicit Intent"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <Button
        android:id="@+id/layout_tlp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Me"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:background="#FF0000"
        android:onClick="panggil"/>

    <Button
        android:id="@+id/layout_web"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="My Website"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"
        android:background="#10DA18"
        android:onClick="buka"/>

    <Button
        android:id="@+id/layout_me"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="About Me"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:background="#078FFA"
        android:onClick="tentang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Implicit Intent | Explicit Intent"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"/>

</RelativeLayout>